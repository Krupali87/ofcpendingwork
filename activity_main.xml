<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/temlogo"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_2"
           android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/vehicle_surveillance_system" />


    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="@string/live_stream_temperaturem_sensor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/temperaturebg"
      android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
     >

        <ImageView
            android:id="@+id/thermometerImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10sp"
            android:src="@drawable/thermometer" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/thermometerImage"
            android:layout_marginTop="20dp"

            >

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature: --°C"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                />

            <ImageView
                android:id="@+id/qualityImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quality"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/txt3" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity: --%"
                android:layout_below="@id/txt3"
                android:layout_marginTop="50dp"
                android:padding="3dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/qualityImage"/>

            <ImageView
                android:id="@+id/hpaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pressure"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/qualityImage" />

            <TextView
                android:id="@+id/Pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure: -- hPa"
                android:layout_below="@id/qualityImage"
                android:layout_toRightOf="@id/hpaImage"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"/>




        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/temperaturebg"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/thermometerImagesecond"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/thermometer" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/thermometerImagesecond"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/txt32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature: --°C"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

            <ImageView
                android:id="@+id/qualityImagesecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quality"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/txt32" />

            <TextView
                android:id="@+id/humiditysecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity: --%"
                android:layout_below="@id/txt32"
                android:layout_marginTop="50dp"
                android:padding="3dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/qualityImagesecond"/>

            <ImageView
                android:id="@+id/hpaImagesecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pressure"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/qualityImagesecond" />

            <TextView
                android:id="@+id/Pressuresecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure: -- hPa"
                android:layout_below="@id/qualityImagesecond"
                android:layout_toRightOf="@id/hpaImagesecond"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"/>




        </RelativeLayout>

    </RelativeLayout>







</LinearLayout>